@using ZayShop.Areas.Admin.Models.Slider;
@model SliderCreateVM;

<form action="create" method="post">
    <div class="form-group">
        <label asp-for="Header1">Header 1</label>
        <input asp-for="Header1" type="text" class="form-control" id="header1" name="header1" placeholder="Enter Header 1">
        <span asp-validation-for="Header1" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Header2">Header 2</label>
        <input asp-for="Header2" type="text" class="form-control" id="header2" name="header2" placeholder="Enter Header 2">
        <span asp-validation-for="Header2" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" type="text" class="form-control" id="description" name="description" placeholder="Enter Description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhotoPath">Photo</label>
        <input asp-for="PhotoPath" type="text" class="form-control" id="photoPath" placeholder="Enter Photo Path " name="photoPath">
        <span asp-validation-for="PhotoPath" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>

</form>