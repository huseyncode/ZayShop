﻿@using ZayShop.Areas.Admin.Models.Slider;
@model SliderIndexVM;
@section Styles {
    <!-- Custom styles for this page -->
    <link href="~/admin/assets/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Sliders</h1>


<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Sliders</h6>
        <a class="btn btn-primary" asp-action="create" asp-controller="slider">Create</a>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Header 1</th>
                        <th>Header 2</th>
                        <th>Description</th>
                        <th>Photo</th>
                        <th>Created At</th>
                        <th>Modified At</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Header 1</th>
                        <th>Header 2</th>
                        <th>Description</th>
                        <th>Photo</th>
                        <th>Created At</th>
                        <th>Modified At</th>
                        <th>Edit</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var slide in Model.Sliders)
                    {
                        <tr>
                            <td>@slide.Header1</td>
                            <td>@slide.Header2</td>
                            <td>@slide.Description</td>
                            <td><img src="@slide.PhotoPath" alt="Alternate Text" class="img-fluid img-thumbnail" style="max-width: 250px; height: auto;" /></td>
                            <td class="text-nowrap">@slide.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@slide.UpdatedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="text-center d-flex justify-content-center">
                                <a class="btn btn-secondary mx-2" asp-action="update" asp-controller="slider" asp-route-id="@slide.Id">Update</a>
                                <form method="post" asp-action="delete" asp-controller="slider" asp-route-id="@slide.Id">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Page level plugins -->
    <script src="~/admin/assets/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/admin/assets/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/admin/assets/js/demo/datatables-demo.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable();
        });
    </script>
}