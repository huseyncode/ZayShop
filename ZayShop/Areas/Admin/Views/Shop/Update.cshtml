@using ZayShop.Areas.Admin.Models.Shop;
@model StyleCategoryUpdateVM;

<form method="post" asp-action="update" asp-controller="shop">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="Enter title" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a class="btn btn-primary" asp-action="Index" asp-controller="shop">Cancel</a>
</form>