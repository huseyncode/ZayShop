﻿@using ZayShop.Areas.Admin.Models.Styles;
@model StyleIndexVM;
@section Styles {
    <!-- Custom styles for this page -->
    <link href="~/admin/assets/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Styles</h1>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Sliders</h6>
        <a class="btn btn-primary" asp-action="create" asp-controller="styles">Create</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Created At</th>
                        <th>Modified At</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Name</th>
                        <th>Created At</th>
                        <th>Modified At</th>
                        <th>Edit</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var style in Model.Styles)
                    {
                        <tr>
                            <td>@style.Name</td>
                            <td class="text-nowrap">@style.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@style.UpdatedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="text-center d-flex justify-content-center">
                                <a class="btn btn-secondary mx-2" asp-action="update" asp-controller="styles" asp-route-id="@style.Id">Update</a>
                                <form method="post" asp-action="delete" asp-controller="styles" asp-route-id="@style.Id">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Page level plugins -->
    <script src="~/admin/assets/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/admin/assets/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/admin/assets/js/demo/datatables-demo.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable();
        });
    </script>
}