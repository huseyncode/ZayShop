﻿@using ZayShop.Areas.Admin.Models.Products;
@model ProductIndexVM;
@section Styles {
    <!-- Custom styles for this page -->
    <link href="~/admin/assets/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800 text-center">Shop</h1>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3 text-center">
        <h6 class="m-0 font-weight-bold text-primary">Style Categories</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered text-center" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Rating</th>
                        <th>Photo</th>
                        <th>Created At</th>
                        <th>Modified At</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Rating</th>
                        <th>Photo</th>
                        <th>Created At</th>
                        <th>Modified At</th>
                        <th>Edit</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var product in Model.Products)
                    {
                        <tr>
                            <td>@product.Name</td>
                            <td>@product.Price $</td>
                            <td>
                                @*Product Rating With Stars*@
                                <ul class="list-inline">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= product.AverageRating)
                                        {
                                            <li class="list-inline-item"><i class="text-warning fa fa-star"></i></li>
                                        }
                                        else
                                        {
                                            <li class="list-inline-item"><i class="text-muted fa fa-star"></i></li>
                                        }
                                    }
                                </ul>
                            </td>
                            <td class="text-center"><img src="@product.PhotoPath" alt="Alternate Text" class="img-fluid img-thumbnail" style="max-width: 250px; height: auto;" /></td>
                            <td class="text-nowrap text-center">@product.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@product.UpdatedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="text-center d-flex justify-content-center">
                                @* <a class="btn btn-secondary mx-2" asp-action="Update" asp-controller="Shop" asp-route-id="@styleCategory.Id">Update</a>
                            <form method="post" asp-action="delete" asp-controller="shop" asp-route-id="@styleCategory.Id">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            </form> *@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Page level plugins -->
    <script src="~/admin/assets/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/admin/assets/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/admin/assets/js/demo/datatables-demo.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable();
        });
    </script>
}